<h1>Addresses</h1>
<div class=table-responsive>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Street</th>
      <th>Town</th>
      <th>Zip code</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.town %></td>
        <td><%= address.zip_code %></td>
        <td><%= address.state %></td>
        <td><%= address.country %></td>
        <td><%= link_to 'Show', person_addresses_path %></td>
        <td><%= link_to 'Edit', edit_person_address_path(address.person, address) %></td>
        <td><%= link_to 'Destroy',  person_address_path(address.person, email), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
