<%= form_with model: @user, url: users_new_path do |form| %>
    <h2> Sign Up </h2>

    <div class="field form-group">
        <%= form.text_field :email, class:"form-control", placeholder:"Please Enter Your Email" %>
    </div></br>

    <div class="field form-group">
        <%= form.password_field :password, class:"form-control", placeholder:"Create your password" %>
    </div></br>

    <div class="field form-group">
        <%= form.password_field :password_confirmation, class:"form-control", placeholder:"Comfirm your password" %>
    </div></br>

    <div class="actions">
        <br/>
        <%= form.submit "Create New User", class:'btn btn-outline-success'%>
    </div>
<% end %>