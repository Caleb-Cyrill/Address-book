<%= form_with(model: person) do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% person.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <br/>
    <%= form.label :salutations %>
    <%= form.text_field :salutations, class:"form-control", placeholder: "Mr., Ms., Mrs." %>
  </div>

  <div class="field form-group">
    <br/>
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class:"form-control", placeholder:"First Name" %>
  </div>

  <div class="field form-group">
    <br/>
    <%= form.label :middle_name %>
    <%= form.text_field :middle_name, class:"form-control", placeholder:"Middle Name" %>
  </div>

  <div class="field form-group">
    <br/>
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last Name" %>
  </div>

  <div class="field form-group">
    <br/>

    <%= form.label :ssn %>
    <%= form.text_field :ssn, class:"form-control", placeholder:"SSN" %>
  </div>

  <div class="field form-group">
    <br/>

    <%= form.label :birth_date %>
    <%= form.date_select :birth_date, class:"form-control" %>
  </div>

  <div class="field form-group">
    <br/>

    <%= form.label :comment %>
    <%= form.text_field :comment, class:"form-control", placeholder:"Type your comments here..." %>
  </div>

  <div class="actions">
  <br/>
    <%= form.submit class:'btn btn-secondary'%>
  </div>
<% end %>
