<div class="tab-pane fade" id="PhoneNumbers">
    <div class=table-responsive>
      <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
          <tr>
            <th>Phone Number</th>
            <th>Comment</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody id="phoneTable">
          <% @phone_number.each do |phone_number| %>
            <%= render "people/phone_numbers/phone_row", phone_number: phone_number %>
          <% end %>
        </tbody>
      </table>
      <tr>
        <td><%= link_to 'Add new Phone number', new_person_phone_number_path(@person), class:"btn btn-primary", data: { bs_toggle: 'modal', bs_target: '#NewPhoneModal', remote: true} %></td>
      </tr>
    </div>
</div>

<%= render 'people/phone_numbers/phoneModal' %>