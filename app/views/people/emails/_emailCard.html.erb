<div class="tab-pane fade" id="Emails">
    <div class=table-responsive>
      <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
          <tr>
            <th>Email</th>
            <th>Comment</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @email.each do |email| %>
            <tr>
              <td><%= email.email %></td>
              <td><%= email.comments %></td>
              <td>
                <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Actions
                  </button>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'Edit', edit_person_email_path(@person, email), class:"text-decoration-none dropdown-item"%></li>
                    <li><%= link_to 'Destroy', person_email_path(@person, email), method: :delete, data: { confirm: 'Are you sure?' }, class:"text-decoration-none text-danger dropdown-item" %></li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <tr>
        <td><%= link_to 'Add new Email', new_person_email_path(@person), class:"btn btn-primary" %></td>
      </tr>
    </div>
</div>