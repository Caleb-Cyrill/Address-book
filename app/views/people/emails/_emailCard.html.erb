<div class="tab-pane fade" id="Emails">
  <div class=table-responsive>
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Email</th>
          <th>Comment</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody id="emailsTable">
        <% @email.each do |email| %>
          <%= render 'people/emails/email_row', email: email %>
        <% end %>
      </tbody>
    </table>
    <tr>
      <td><%= link_to 'Add new Email', new_person_email_path(@person), class:"btn btn-primary", data: { bs_toggle: 'modal', bs_target: '#NewEmailModal', remote: true} %></td>
    </tr>
  </div>
</div>

<%= render 'people/emails/emailModal' %>