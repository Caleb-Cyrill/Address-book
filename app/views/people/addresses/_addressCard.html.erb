<div class="tab-pane fade" id="Addresses">
  <div class=table-responsive>
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Street</th>
          <th>Town</th>
          <th>Zip code</th>
          <th>State</th>
          <th>Country</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody id="addressTable">
        <% @address.each do |address| %>
          <%= render 'people/addresses/address_row', address: address %>
        <% end %>
      </tbody>
    </table>
     <tr>
        <td><%= link_to 'Add new Address ', new_person_address_path(@person), class:"btn btn-primary", data: { bs_toggle: 'modal', bs_target: '#NewAddressModal', remote: true} %></td>
      </tr>
  </div>
</div>

<%= render 'people/addresses/addressModal' %>