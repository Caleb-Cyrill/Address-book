<div class="container">
  <div class="card">
    <div class="card-header">
      <strong><%= @person.salutations %> <%= @person.first_name %> <%= @person.middle_name %> <%= @person.last_name %></strong>
    </div>

    <p>
      <strong>Ssn:</strong>
      <%= @person.ssn %>
    </p>

    <p>
      <strong>Birth date:</strong>
      <%= @person.birth_date %>
    </p>

    <% if @person.comment != "" %>
      <p>
        <strong>Comment:</strong>
        <%= @person.comment %>
      </p>
    <% end %>
  </div>
</div>

<div class=table-responsive>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Email</th>
        <th>Comment</th>
      </tr>
    </thead>
    <tbody>
      <% @email.each do |email| %>
      <tr>
        <td><%= email.email %></td>
        <td><%= email.comments %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class=table-responsive>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Phone Number</th>
        <th>Comment</th>
      </tr>
    </thead>

    <tbody>
      <% @phone_number.each do |phone_number| %>
      <tr>
        <td><%= phone_number.phone_number %></td>
        <td><%= phone_number.comments %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class=table-responsive>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Street</th>
        <th>Town</th>
        <th>Zip code</th>
        <th>State</th>
        <th>Country</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @address.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.town %></td>
        <td><%= address.zip_code %></td>
        <td><%= address.state %></td>
        <td><%= address.country %></td>
        <td><%= link_to 'Edit', edit_person_address_path(@address), class:"btn btn-primary"%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="container">
  <div class="actions">
    <%= link_to 'Edit', edit_person_path(@person), class:"btn btn-primary" %> 
    <%= link_to 'Back to People', people_path, class:"btn btn-primary" %>
  </div>
</div>

