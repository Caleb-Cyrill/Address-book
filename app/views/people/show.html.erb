<div class="container">
  <div class="card">
    <div class="card-header">
      <%= @person.salutations %> <%= @person.first_name %> <%= @person.middle_name %> <%= @person.last_name %>
    </div>

    <p>
      <strong>Ssn:</strong>
      <%= @person.ssn %>
    </p>

    <p>
      <strong>Birth date:</strong>
      <%= @person.birth_date %>
    </p>

    <% if @person.comment != "" %>
      <p>
        <strong>Comment:</strong>
        <%= @person.comment %>
      </p>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="actions">
    <%= link_to 'Edit', edit_person_path(@person), class:"btn btn-primary" %> 
    <%= link_to 'Back to People', people_path, class:"btn btn-secondary" %>
  </div>
</div>