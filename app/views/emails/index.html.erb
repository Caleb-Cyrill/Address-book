<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Comments</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.email %></td>
        <td><%= email.comments %></td>
        <td><%= email.person_id %></td>
        <td><%= link_to 'Show', person_emails_path %></td>
        <td><%= link_to 'Edit', edit_person_email_path(email.person, email) %></td>
        <td><%= link_to 'Destroy', person_email_path(email.person, email), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

